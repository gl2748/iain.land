extends infobox

mixin vimeo(vimeourl, caption)
  vimeo
    .vimeo-container
      iframe(
        src=vimeourl
        width="640"
        height="360"
        frameborder="0"
        webkitallowfullscreen
        mozallowfullscreen
        allowfullscreen
        )
    .caption
      p=caption
    

block photos
  #photos
    +vimeo('https://player.vimeo.com/video/126847632?portrait=0', 'Hello World')
