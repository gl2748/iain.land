@import '_settings'
@import '_insta'

normalize-css()
base()

.logobox
 
  .logo 
    text-align: center
    font-size: 20px    
    margin: 10px 10px 30px 10px

  .links
    text-align: center
    font-size: 15px

    a
      color: #35404C
      text-decoration: none

      span
        hover-glow()
        margin: 0px 10px 0px 0px
        padding: 10px 10px 10px 10px

.infobox
  display: flex
  justify-content: center

  .text

    p
      overflow: hidden;
      max-width: 75ch;

body
  padding: 10px
  height: 100%

.photo
  display: block
  +below(780px)
    margin: 0px 0px 0px 0px

  img
    display: block
    margin: 0 auto
    max-width: 100%
    max-height: 100%

.caption
  text-align: center

